<!DOCTYPE html>
<html>
<head>
  <title>AlgoTradingApp</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
  <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
</head>
<% if notice %>
  <p class="alert alert-success"><%= notice %></p>
<% end %>
<% if alert %>
  <p class="alert alert-danger"><%= alert %></p>
<% end %>
<body>

<div class="appHeader">
  <div class="appHeading">
    <h2 class="appHead"> Algo Trading </h2>
    <div class="dareToDream"> Dare to dream..! </div>
  </div>
  <div class="loginSection">
    <% if user_logged_in? %>
      <span class="dashboardLink"> <%= link_to "Dashboard", '/dashboard', method: :get%> </span>
      <span class="dashboardLink"> <%= link_to "Log out", '/logout', method: :get%> </span>
    <%else%>
      <%= link_to "Login", 'login', method: :get%> |
      <%= link_to "Sign Up", '/users/new', method: :get%>
    <%end%>
  </div>
</div>

<%= yield %>



<style type="text/css">
  .alert-success{
    color: green;
  }
  .alert-danger{
    color: red;
  }
</style>

</body>
</html>
